{
  "name": "3per",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "YouTube Visualizer",
  "homepage_url": "http://edoardoo.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "contentSettings",
    "idle",
    "notifications",
    "https://*.youtube.com/*"
  ],
  "web_accessible_resources": [
    "src/inject/clubber/assets/shaders/*"
  ],
  "content_scripts": [
    {
      "matches": [
      "http://youtube.com/*",
      "https://youtube.com/*",
      "http://www.youtube.com/*",
      "https://www.youtube.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
      "http://youtube.com/*",
      "https://youtube.com/*",
      "http://www.youtube.com/*",
      "https://www.youtube.com/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/inject/inject.js",
        "src/inject/clubber/dist/clubber.js",
        "src/inject/clubber/lib/twgl.min.js",
        "src/inject/clubber/lib/shader.js",
        "src/inject/clubber/lib/common.js",
        "src/inject/clubber/toy/main.js",
        "src/inject/index.js"

      ]
    }
  ]
}
